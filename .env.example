# Foundation Building Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Application Configuration
REACT_APP_NAME="Foundation Building Frontend"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENVIRONMENT="development"

# API Configuration
REACT_APP_API_BASE_URL="http://localhost:3001/api"
REACT_APP_API_TIMEOUT=30000

# GitHub Integration
REACT_APP_GITHUB_CLIENT_ID="your_github_client_id"
REACT_APP_GITHUB_REDIRECT_URI="http://localhost:3000/auth/callback"
REACT_APP_GITHUB_SCOPES="repo,read:user,read:org"

# GitHub API (for server-side operations)
# Note: Keep GITHUB_TOKEN in server environment, not client-side
# GITHUB_TOKEN="your_github_personal_access_token"

# Vector Database Configuration
REACT_APP_VECTOR_DB_URL="http://localhost:8000"
REACT_APP_VECTOR_DB_API_KEY="your_vector_db_api_key"

# AI/ML Services
REACT_APP_AI_SERVICE_URL="http://localhost:5000"
REACT_APP_AI_SERVICE_API_KEY="your_ai_service_api_key"

# Authentication
REACT_APP_JWT_SECRET="your_jwt_secret_key"
REACT_APP_SESSION_TIMEOUT=3600000

# External Services
REACT_APP_WIKI_BASE_URL="https://github.com/wasim-s-creator/foundation-building-frontend/wiki"

# Feature Flags
REACT_APP_ENABLE_GITHUB_INTEGRATION=true
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_VECTOR_SEARCH=true
REACT_APP_ENABLE_WIKI_INTEGRATION=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=""
REACT_APP_MIXPANEL_TOKEN=""

# Error Reporting (Optional)
REACT_APP_SENTRY_DSN=""

# Performance Monitoring
REACT_APP_PERFORMANCE_MONITORING=true

# Security
REACT_APP_CONTENT_SECURITY_POLICY=true
REACT_APP_HTTPS_ONLY=false

# Development Settings
REACT_APP_MOCK_API=false
REACT_APP_SHOW_DEVTOOLS=true
REACT_APP_LOG_LEVEL="info"

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Testing
CI=false